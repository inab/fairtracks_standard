{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "$id": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_sample.schema.json", 
    "title": "FAIRification of Genomic Tracks JSON Schema - Sample", 
    "type": "object", 
    "properties": {
        "@schema": {
            "description": "The JSON schema absolute IRI. Used for link JSON data to a particular version of the JSON schema. Must match the value of 'id' in the linked schema", 
            "const": "https://raw.githubusercontent.com/fairtracks/fairtracks_standard/master/json/schema/fairtracks_sample.schema.json", 
            "type": "string", 
            "format": "iri"
        }, 
        "global_id": {
            "description": "Global sample identifier, resolvable by identifiers.org", 
            "type": "string", 
            "format": "curie", 
            "namespace": "biosample", 
            "matchType": "canonical"
        }, 
        "local_id": {
            "description": "Submitter-local identifier (within investigation/hub) for sample (in curie-format, if applicable)", 
            "unique": true, 
            "type": "string"
        }, 
        "biomaterial_type": {
            "description": "Type of biomaterial", 
            "pattern": "^(?i)cell line|primary cell|primary cell culture|primary tissue$", 
            "type": "string"
        }, 
        "sample_type": {
            "description": "Main class of sample (e.g. specific cell line, cell/tissue type, \u2026)", 
            "type": "object", 
            "properties": {
                "term_iri": {
                    "description": "IRI linking to an EFO, CL or CLO ontology term", 
                    "type": "string", 
                    "format": "term", 
                    "ontology": [
                        "https://raw.githubusercontent.com/obophenotype/cell-ontology/v2019-08-12/cl.owl", 
                        "https://raw.githubusercontent.com/CLO-ontology/CLO/0e44a0731e24004c964484e1959f6396c0d9ecc9/src/ontology/clo.owl", 
                        "https://github.com/EBISPOT/efo/releases/download/v3.5.1/efo.owl"
                    ], 
                    "matchType": "exact"
                }, 
                "term_value": {
                    "description": "Exact value according to the ontology used", 
                    "autogenerated": true, 
                    "type": "string"
                }
            }, 
            "required": [
                "term_iri"
            ]
        }
    }, 
    "required": [
        "global_id", 
        "local_id", 
        "biomaterial_type", 
        "sample_type"
    ], 
    "additionalProperties": true
}